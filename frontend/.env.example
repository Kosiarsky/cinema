# Frontend SSR environment
# Copy to .env and fill values. Used only during SSR (Node). For CSR use src/assets/runtime-config.js.

# Set your backend API base URL
API_BASE_URL=https://127.0.0.1:8000
# Public base URL of this frontend app (SSR)
FRONTEND_BASE_URL=https://localhost:4000
# Port SSR server listens on
PORT=4000

# Enable HTTPS for SSR server and provide key/cert paths
FRONTEND_USE_HTTPS=true
FRONTEND_SSL_KEY_PATH=../certs/localhost.key
FRONTEND_SSL_CERT_PATH=../certs/localhost.crt
