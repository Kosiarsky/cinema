# Backend environment configuration
# Copy this file to .env and adjust values per environment

# Allowed frontend origin(s) for CORS (comma-separated)
CORS_ALLOW_ORIGINS=https://localhost:4000

# Frontend base URL for building redirect links (e.g., Stripe success/cancel)
FRONTEND_BASE_URL=https://localhost:4000

# Database connection URL used by SQLAlchemy and Alembic
SQLALCHEMY_DATABASE_URL=postgresql://postgres:admin@localhost/apollo

# JWT secret key used to sign access/refresh tokens (keep private!)
# You can also use SECRET_KEY for backwards compatibility
JWT_SECRET_KEY=change-me

# Stripe keys
STRIPE_SECRET_KEY=<your_stripe_secret_key>